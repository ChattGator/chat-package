{
  "compilerOptions": {
    // Default
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,


    // Added
    "jsx": "react", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./src/",
    "paths": {
      "@components": [
        "components"
      ],
      "@contexts": [
        "contexts"
      ],
      "@hooks": [
        "hooks"
      ],
      "@lib": [
        "lib"
      ],
      "@utils": [
        "utils"
      ],
    }   
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.test.tsx",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "**/__tests__/*.test.js"
  ]
}
